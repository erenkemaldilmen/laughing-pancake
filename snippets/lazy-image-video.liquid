{% comment %}theme-check-disable ImgWidthAndHeight{% endcomment %}

  {%- assign image = media.preview_image | image_url: width: 200  -%}
  <img
    src="{{ image }}"
    data-aspectratio="{{ image.aspect_ratio }}"
    data-sizes="auto"
    data-widths="{{ sizes }}"
    width="{{ image.width }}"
    height="{{ image.height }}"
    data-original="{{ image }}"
    alt="{{ image.alt | escape }}"
    lazyload="lazy"
    style="object-position:{{ image.presentation.focal_point }}"
  >
