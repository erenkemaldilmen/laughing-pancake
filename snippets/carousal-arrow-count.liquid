<button
  class="{%if settings.arrow_shadow_enabled %}arrow-shadow-enabled {%endif  %} navigation-arrow-button previous no-js-hidden"
  type="button"
  aria-label="Previous"
  data-slideshow-navigation-button
>
  <svg class="navigation-arrow-button-icon" width="9" height="12" viewBox="0 0 9 12" fill="none">
    <path d="M6.8999 10.6L2.0999 5.8L6.8999 1" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</button>
<div class="slider-pagination no-js-hidden">
  <span class="current-slide">1</span>
  <span class="slide-spacer">/</span>
  <span class="total-slides">
    {%- if products_count %}{{ product.count }}{% else %}{{ section.blocks.size }}{% endif -%}
  </span>
</div>
<button
  class="{%if settings.arrow_shadow_enabled %}arrow-shadow-enabled {%endif  %} navigation-arrow-button next no-js-hidden"
  type="button"
  aria-label="Next"
  data-slideshow-navigation-button
>
  <svg class="navigation-arrow-button-icon" width="7" height="12" viewBox="0 0 7 12" fill="none">
    <path d="M1.1001 10.6L5.9001 5.8L1.1001 1" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</button>

