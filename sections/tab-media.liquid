{{ 'tab-media.css' | asset_url | stylesheet_tag }}
{%-liquid
 assign Colorscheme = section.settings.color_scheme
 %}
<div class="scheme-{{Colorscheme}} section-padding{% if section.settings.enable_gradient %} gradiant{% endif %}">
  <div class="{{ settings.layout_style }}">
    {%- capture highlightPrefix -%}
      <span class="line-marker {% if section.settings.highlight_style == 'background' %}highlight-background {% if section.settings.bg__color == 'gradient' %}highlight-background-gradient{% else %}highlight-background-solid{% endif %}{% endif %}">
      {%- endcapture -%}
      {%- capture highlightSuffix -%}
      {% if section.settings.highlight_style != 'background' %}
        {% render 'marker', marker: section.settings.highlight_style %}
     {% endif %}
      </span>
    {%- endcapture -%}
    {% if section.settings.heading != blank %}
    <div class="section-title {{ section.settings.heading_alignment }}">
      <{{ section.settings.seo_heading }} class="{{ section.settings.heading_size }} section-heading {% if section.settings.heading_animation %} linear-animation{% endif %}">
        {% if section.settings.heading_animation %}
          {{ section.settings.heading }}
        {% else %}
         {{ section.settings.heading | replace: "[", highlightPrefix | replace: "]", highlightSuffix }}
        {% endif %}
      </{{ section.settings.seo_heading }}>
    </div>
  {% endif %}
    <div class="tab-media-wrapper">
      <form>
        {% for block in section.blocks %}
          <div
            id="tab-media-{{ block.id }}"
            class="tab-media-item right{% if forloop.index==1 %} active{% endif %}"
            data-tab-media
            {{ block.shopify_attributes }}
            data-index="{{ forloop.index0}}">
            {% if section.blocks.size != 1 %}
              <input
                type="radio"
                name="size"
                id="tabHeading-{{ block.id}}"
                value="{{ block.id}}" />
                {% assign defaultText = 'Tab heading'%}
                <label for="tabHeading-{{ block.id}}" class="h3 tab-media-heading">{{ block.settings.tab_heading | default:defaultText }}</label>
            {% endif %}
            {%- case block.type -%}
              {%- when 'trending-products' -%}
                <article>
                  <div class="tab-media-content-wrapper">
                    <div class="row">
                      {% liquid
                        assign contentStatus = false
                        if block.settings.heading != blank or block.settings.custom_description != blank  or block.settings.product_list.count > 0 
                          assign contentStatus = true
                        endif
                        if block.settings.btn_text != blank and block.settings.btn_link != blank 
                          assign contentStatus = true
                        endif
                      %}
                        <div class="col-12{% if contentStatus %} col-md-6 col-lg-6 col-xl-5{% else %} col-md-12 col-lg-12 col-xl-12{% endif %} p-0">
                          <div class="tab-media-imagebox">
                            {% if block.settings.btn_text == blank and block.settings.btn_link != blank %}
                              <a href="{{ block.settings.btn_link }}" class="media d-block">
                                {% else %}
                            <div class="media">
                            {% endif %}
                              {% if block.settings.custom_image != blank %}
                              {% render 'lazy-image', image: block.settings.custom_image, imageSize: 360 %}
                              {% else %}
                                {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                              {% endif %}
                              {% if block.settings.btn_text == blank and block.settings.btn_link != blank %}
                              </a>
                                  {% else %}
                            </div>
                              {% endif %}
                            </div>
                          </a>
                        </div>
                      {% if contentStatus %}
                        <div class="col-12 col-md-6 col-lg-6 col-xl-7 p-0">
                          <div class="tab-media-contentbox {{ block.settings.content_alignment }}">
                            <div class="section-title">
                              {% if block.settings.heading != blank %}
                                <{{ block.settings.seo_heading }} class="{{ block.settings.heading_size }} {% if block.settings.background_gradient != blank %}tab-media-title{% endif %}">
                                  {{ block.settings.heading }}
                                </{{ block.settings.seo_heading }}>
                              {% endif %}
                              {% if block.settings.custom_description != blank %}
                                <p class="description">{{ block.settings.custom_description }}</p>
                              {% endif %}
                            </div>
                            <div class="tab-media-product-outer">
                              {% for product in block.settings.product_list %}
                                {% render 'product-short-detail', cardProduct: product, showdiscountOff: false %}
                              {% endfor %}
                            </div>
                            <div class="tab-media-btn">
                              {% if block.settings.btn_text != blank and block.settings.btn_link != blank %}
                                <a
                                  href="{% if block.settings.btn_link != blank %}{{ block.settings.btn_link }}{% else %}{{ collection.url }}{% endif %}"
                                  class="{% if block.settings.button_as_link %}hyperlink {% else %} button{% if settings.enable_button_shadow %} button-shadow{% endif %}{% endif %} collection-card-button {{ block.settings.button_size }}-btn"
                                  title="{{ block.settings.btn_text }}">
                                  {{- block.settings.btn_text -}}
                                </a>
                              {% endif %}
                            </div>
                          </div>
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </article>
              {%- when 'image-with-text' -%}
                <article>
                  {%- capture iconText -%}
                  {% for i in (1..3) %}
                    {% capture service_text %}text{{ i }}{% endcapture %}
                    {% assign text = block.settings[service_text] %}
                    {% capture service_description %}description{{ i }}{% endcapture %}
                    {% assign description = block.settings[service_description] %}
                    {% capture service_icon %}svg_icon{{ i }}{% endcapture %}
                    {% assign Icon = block.settings[service_icon] %}
                    {%- if text != blank or Icon != blank -%}
                      <div class="multi-column-item">
                        <div class="multi-column-item-inner">
                          <div class="multi-column-icon">
                            {{ Icon }}
                          </div>
                          <div class="multi-column-content">
                            <span class="multi-column-heading heading-font">
                              {{ text }}
                            </span>
                            <p>{{ description }}</p>
                          </div>
                        </div>
                      </div>
                    {%- endif -%}
                  {%- endfor -%}
                  {%- endcapture -%}
                  {% liquid
                    assign contentStatus = false
                    if block.settings.heading != blank or block.settings.custom_description != blank  or iconText != blank 
                      assign contentStatus = true
                    endif
                    if block.settings.btn_text != blank and block.settings.btn_link != blank 
                      assign contentStatus = true
                    endif
                  %}
                  <div class="tab-media-content-wrapper">
                    <div class="row">
                      {% capture imageContent %}
                        <div class="col-12{% if contentStatus %} col-md-6 col-lg-5{% else %} col-md-12 col-lg-12{% endif %} p-0">
                          <div class="tab-media-imagebox">
                            <div class="media">
                              {% if block.settings.image != blank %}
                                {% render 'lazy-image', image: block.settings.image, imageSize: 360 %}
                              {% else %}
                                {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                              {% endif %}
                            </div>
                          </div>
                        </div>
                      {% endcapture %}
                      {% if block.settings.image_position == 'left' %}
                        {{ imageContent }}{% endif %}
                        {% if contentStatus %}
                      <div class="col-12 col-md-6 col-lg-7 p-0">
                        <div class="tab-media-contentbox">
                          <div class="section-title {{ block.settings.heading_alignment }}">
                            {% if block.settings.heading %}

                              {%- comment -%} <h2 class="{{ block.settings.heading_size }} tab-media-title">{{ block.settings.heading }}</h2> {%- endcomment -%}

                              <{{ block.settings.seo_heading }} class="{{ block.settings.heading_size }} tab-media-title">
                                {{ block.settings.heading }}
                              </{{ block.settings.seo_heading }}>

                            {% endif %}
                            {% if block.settings.description != blank %}
                              <p class="description">{{ block.settings.description }}</p>
                            {% endif %}
                          </div>
                          {% if iconText != blank %}
                          <div class="tab-media-product-wrapper">
                            <div class="multi-column-wrapper">
                              {{ iconText }}
                            </div>
                          </div>
                        {% endif %}
                        {% if block.settings.btn_link != blank and block.settings.btn_text != blank %}
                          <div class="tab-media-btn">
                              <a
                                href="{{ block.settings.btn_link }}"
                                class="{% if block.settings.button_as_link %}hyperlink {% else %} button {{ block.settings.button_size }}-btn{% if settings.enable_button_shadow %} button-shadow{% endif %}{% endif %} "
                                tabindex="-1"
                                aria-label="{{ block.settings.btn_text }} "
                                title="{{ block.settings.btn_text }}">{{ block.settings.btn_text }}</a>
                          </div>
                        {% endif %}
                        </div>
                      </div>
                    {% endif %}
                      {% if block.settings.image_position == 'right' %}
                        {{ imageContent }}{% endif %}
                    </div>
                  </div>
                </article>
              {%- when 'media' -%}
                <article>
                  <div class="tab-media-content-wrapper rounded">
                    <div class="tab-media-contentbox tab-video-outer" data-video-main-wrapper>
                      <div class="tab-media-product-wrapper" data-video-wrapper>
                        <div class="tab-media-video video-autoplay-{{ block.settings.autoplay}}">
                          {% if block.settings.autoplay == false %}
                            <div class="video-thumbnail">
                              <div class="media">
                                {% if block.settings.cover_image != blank %}
                                  {% render 'lazy-image', image: block.settings.cover_image, imageSize: 830 %}
                                {% else %}
                                  {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                                {% endif %}
                              </div>
                            </div>
                          {% endif %}
                          {% if block.settings.video != blank or block.settings.video_url != blank%}
                         <deferred-media class="deferred-media " data-type="{{ block.settings.video_url.type }}">
                            <template>
                              {% if block.settings.video != blank %}
                                {% if block.settings.autoplay == true %}
                                  {{ block.settings.video | video_tag: image_size: '1100x', autoplay: true, class: '', loop: true, controls: false, muted: true }}
                                {% else %}
                                  {{ block.settings.video | video_tag: image_size: '1100x', autoplay: false, class: '', loop: true, controls: true, muted: false }}
                                {% endif %}
                              {% elsif block.settings.video_url != blank %}
                                {%- if block.settings.video_url.type == 'youtube' -%}
                                  {% if block.settings.autoplay %}
                                    <div
                                      class="youtubeVideo video_full_width"
                                      id="videoBanner-{{ block.id }}"
                                      data-id="{{ block.settings.video_url.id }}"
                                    ></div>
                                  {% else %}
                                  <iframe
                                    src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?autoplay=0&controls=1&mute=0&enablejsapi=1&loop=1&rel=0&showinfo=0"
                                    class="youtube_video" data-autoplay="{{ block.settings.autoplay }}" frameborder="0" allowfullscreen title="{{ block.settings.heading | escape }}"></iframe>
                                  {% endif %}
                                {%- elsif block.settings.video_url.type == 'vimeo' -%}
                                  <iframe
                                    src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}?{% if block.settings.autoplay %}autoplay=1&loop=1&autopause=0&muted=1{% else %}&autoplay=0&background=1{% endif %}{% if block.settings.autoplay ==false%}&background=0{% endif %}"
                                    class="vimeo_video {% if block.settings.autoplay %}video_full_width{% endif %}"
                                    {% if block.settings.autoplay %}allow="autoplay; fullscreen encrypted-media"{% endif %} data-autoplay="{{ block.settings.autoplay }}" allowfullscreen title="{{ block.settings.heading | escape }}"></iframe>
                                {%- endif -%}
                              {% endif %}
                            </template>
                            {% if block.settings.autoplay and  block.settings.video != blank %}
                              <div class="deferred-media-placeholder">
                                {% if block.settings.cover_image != blank  %}
                                  {% render 'lazy-image', image: block.settings.cover_image, imageSize: 1920 %}
                                {% elsif block.settings.video != blank %}
                                  {% render 'lazy-image', image: block.settings.video.preview_image, imageSize: 1920 %}
                               
                                {% endif %}
                              </div>
                            {% endif %}
                           </deferred-media>
                          {% endif %}
                          <div class="tab-video-play-button" >
                          {% if block.settings.autoplay == false %}
                            {% if block.settings.video != blank or block.settings.video_url != blank %}
                              <a
                                href="#"
                                class="js-load-media tab-media-play-button"
                                role="button"
                                title="Play button" data-video-play-button
                                >
                                {% render 'icons', icon: 'play' %}
                              </a>
                            {% endif %}
                          {% endif %}
                          <div class="video-title">
                            {% if block.settings.heading %}
                              {%- comment -%} <h2 class="{{ block.settings.heading_size }} heading-font">{{ block.settings.heading }}</h2> {%- endcomment -%}

                              <{{ block.settings.seo_heading }} class="{{ block.settings.heading_size }} heading-font">
                                {{ block.settings.heading }}
                              </{{ block.settings.seo_heading }}>

                            {% endif %}
                          </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </article>
            {%- endcase -%}
          </div>
        {% endfor %}
      </form>
    </div>
  </div>
</div>

<style> 
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      #tab-media-{{ block.id }}{
        --heading-text-gradient: {{ block.settings.background_gradient }};
        --tab-background-gradient: {{ block.settings.background_gradient }};
        {% unless block.settings.card_background == 'rgba(0,0,0,0)' or block.settings.card_background == blank %}
          --tab-card-background: {{ block.settings.card_background }};
        {% else %}
          --tab-card-background: rgb(var(--cardBackground));
        {% endunless %}
        {% unless block.settings.card_text == 'rgba(0,0,0,0)' or block.settings.card_text == blank %}
          --tab-card-text: {{ block.settings.card_text }};
        {% else %}
          --tab-card-text: rgb(var(--textColor));
        {% endunless %}
      }
      {% if block.settings.icon_default_color == false %}
      #tab-media-{{ block.id }} .multi-column-icon svg path,
      #tab-media-{{ block.id }} .multi-column-icon svg circle{
        {% unless block.settings.icon_color == 'rgba(0,0,0,0)' or block.settings.icon_color == blank %}
        fill:{{ block.settings.icon_color}};
          {% else %}
          fill:rgb(var(--textColor));
        {% endunless %}
      }
    {% endif %}
     
    {% endfor %}
  {% endif %}
  #shopify-section-{{ section.id }}{
    --padding-top: {{ section.settings.top_space_desktop}}px;
    --padding-bottom: {{ section.settings.bottom_space_desktop}}px;
    --desktopArticleHeight:{{ section.settings.tab_height}};
    --mobileArticleHeight:{{ section.settings.tab_height_mobile}};
  }
  #shopify-section-{{ section.id }} .tab-media-video.video-autoplay-true:after {
    position: absolute;
    content: '';
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
  }
  @media only screen and (max-width:767px) {
    #shopify-section-{{ section.id }}{
      --padding-top: {{ section.settings.top_space_mobile }}px !important;
      --padding-bottom: {{ section.settings.bottom_space_mobile }}px !important;
    }
  }
  {% if section.settings.section_visibility == 'large' %}
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }}{
        display: none !important;
      }
    }
  {% elsif section.settings.section_visibility == 'small' %}
    @media(min-width: 768px) {
      #shopify-section-{{ section.id }}{
        display: none !important;
      }
    }
  {% endif %}
</style>
