{{ 'slideshow.css' | asset_url | stylesheet_tag }}
{% liquid

    if section.settings.section_style == 'section_compactview'
     assign containerClass = 'compact-container'
    elsif section.settings.section_style == 'section_container'
      assign containerClass = 'container'
    elsif section.settings.section_style == 'section_fullwidth'
      assign containerClass = 'container-fullwidth'
    endif

  %}
<div class="scheme-{{ section.settings.color_scheme }} section-padding {% if section.settings.enable_gradient %} gradiant{% endif %}">

<div class="{{ containerClass }}">
  
<div class="slide-show-wrapper p-0">
  {% liquid
    assign zoomclass = ''
    assign slider_thumbnail = section.settings.slider_thumbnail
    case slider_thumbnail
      when 'dots'
        assign dots = true
      when 'arrow-count'
        assign dots = false
      when 'only-arrow'
        assign dots = false
      when 'small-thumbnail'
        assign dots = false
      when 'large-thumbnail'
        assign dots = false
    endcase
    if section.settings.slider_transition == 'fade'
      assign zoomclass = 'zoom-animate-slide'
    endif

  assign thumb = false
   if section.settings.slider_thumbnail == 'small-thumbnail'
    assign thumb = true
   endif
  %}
  <div
    class="no-js-slider slideshow-section slideshow-main-{{ section.id }} slideshow-outer {{ section.settings.layout_type }} {% if section.settings.slider_transition == 'fade' %}slideshow-zoom{% endif %} {% if containerClass == 'container-fullwidth' %}banner-fullwidth {% endif %}"
    {% if section.settings.slider_thumbnail == 'arrow-count' %}
      data-slideshow-pagination
    {% endif %}
    {% if section.blocks.size > 1 %}
      data-slideshow='
        {
        "contain": true,
        "cellAlign": "left",
        "sync": ".slideshow-nav-thumb-{{ section.id }}",
        "sync":".slideshow-nav-1-thumb-{{ section.id }}",
        "imagesLoaded": true,
        "lazyLoad": true,
        "fade": {% if section.settings.slider_transition == 'fade' %}true{% else %}false{% endif %},
        "pageDots": {{dots}},
        "autoPlay": {% if section.settings.auto_rotate == true %}{{ section.settings.change_slides_speed | times: 1000 }}{% else %}false{% endif %},
        "draggable": true,
        "prevNextButtons": false,
        "groupCells": true,
        "cellSelector":".slideshow-item",
        "zoom": true,
        "imagesLoaded": true
        }
      '
    {% endif %}
  >
    {% for block in section.blocks %}
      {% capture slideImage %}
          {% liquid
            assign mobileImage = false
            if block.settings.image_mobile != blank
              assign mobileImage = true
              assign mobileClass = 'mobile-img d-block d-md-none ' | append: zoomclass
              if forloop.first
                assign height = block.settings.image_mobile.width | divided_by: block.settings.image_mobile.aspect_ratio | round
                assign sizes = '100vw'
                assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                if section.index == 1
                    assign fetch_priority = 'high'
                endif
                    echo block.settings.image_mobile | image_url: width: 3840 | image_tag: height: height,class: mobileClass, sizes: sizes, widths: widths, fetchpriority: fetch_priority
              else
                 render 'lazy-image', class: mobileClass,image: block.settings.image_mobile, imageSize: 575
              endif
            endif
            assign desktopClass = '' | append: zoomclass
            if mobileImage
              assign desktopClass = 'd-none d-md-block ' | append: zoomclass
       
            endif
            if block.settings.image_desktop != blank
              if forloop.first
                assign height = block.settings.image_desktop.width | divided_by: block.settings.image_desktop.aspect_ratio | round
                assign sizes = '100vw'
                assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                if section.index == 1
                    assign fetch_priority = 'high'
                endif
                  echo block.settings.image_desktop | image_url: width: 3840 | image_tag: height: height,class: desktopClass, sizes: sizes, widths: widths, fetchpriority: fetch_priority
              else
                  render 'lazy-image', class: desktopClass, image: block.settings.image_desktop, imageSize: 1920
              endif
            elsif block.settings.image_desktop == blank and mobileImage
              assign placeholderClass = 'placeholder-svg d-none d-md-block ' | append:zoomclass
              echo 'hero-apparel-2' | placeholder_svg_tag: placeholderClass 
            else
              assign placeholderClass = 'placeholder-svg ' | append:zoomclass
              echo 'hero-apparel-1' | placeholder_svg_tag: placeholderClass
            endif
          %}
    {% endcapture %}
      <div
        id="slideshow_item_{{ block.id }}"
        class="slideshow-item {% if section.settings.desktop_height == 'adapt_image' %}desktop-adapt-height{%- else -%} desktop-fixed-height {% endif %} {% if section.settings.mobile_height == 'adapt_image' %} mobile-adapt-height{%- else -%} mobile-fixed-height{% endif %}"
        {{ block.shopify_attributes }}
      >
        {% if block.settings.slide_as_link == true %}
          {% if block.settings.btn_link != blank %}
            <a class="slideshow-link" href="{{ block.settings.btn_link }}" aria-label="Media link"></a>
          {% endif %}
        {% endif %}
        <div class="slideshow-media media">
          {% if block.settings.slider_video != blank %}
            <deferred-media class="deferred-media">
              <template>
                <video id="slider_video-{{ block.id }}" class="videoBackgroundFile" autoplay muted loop playsinline>
                  <source
                    src="{% if block.settings.slider_video.sources[0].url contains 'mp4' %}{{ block.settings.slider_video.sources[0].url -}}{% else %}{{ block.settings.slider_video.sources[1].url -}}{% endif %}"
                    type="video/mp4"
                  >
                </video>
             </template>
                <div class="deferred-media-placeholder">
                    {% render 'lazy-image', image: block.settings.slider_video.preview_image, imageSize: 1920 %}
                </div>
                 <noscript>
                        <a
                          href="{{ block.settings.slider_video | external_video_url }}"
                          target="_blank"
                          class="unstyled-link"
                          aria-label="{{ block.settings.slider_video.alt | default: product.title | strip_html }}"
                        >
                          {% comment %}theme-check-disable ImgWidthAndHeight{% endcomment %}
                          <img
                            src="{{ block.settings.slider_video.preview_image | image_url: width: 2048 }}"
                            alt="{{ block.settings.slider_video.preview_image.alt | escape }}"
                            loading="lazy"
                          >
                          {% comment %}theme-check-enable ImgWidthAndHeight{% endcomment %}
                        </a>
                      </noscript>
            </deferred-media>
          {%- else -%}
            {{ slideImage }}
          {% endif %}
        </div>
        {% if block.settings.heading != blank
          or block.settings.description != blank
          or block.settings.btn_link != blank
          or block.settings.subheading != blank
        %}
          <div class="slideshow-content-wrapper">
            <div class="slideshow-content {{ block.settings.content_width }}-width {{ block.settings.desktop_content_position }} {{ block.settings.mobile_content_position }} {{ block.settings.desktop_alignment }} {{ block.settings.mobile_alignment }}">
              <div class="slideshow-content-inner">
                {% if block.settings.subheading != blank  %}
                <h6 class="slideshow-subheading h6">{{ block.settings.subheading }}</h6>
                {% endif %}
                {% if block.settings.heading != blank %}
                  <{{ block.settings.seo_heading }} class="slideshow-heading {{ block.settings.font_family }}-font {{ block.settings.heading_size }}">
                    {{- block.settings.heading -}}
                  </{{ block.settings.seo_heading }}>
                {% endif %}
                {% if block.settings.description != blank %}
                  <p class="slideshow-desc">{{ block.settings.description }}</p>
                {% endif %}
                {% if block.settings.btn_link != blank or block.settings.btn_link2 != blank %}
                  <div class="slideshow-button-box">
                    {% if block.settings.slide_as_link == false %}
                      {% if block.settings.btn_link != blank and block.settings.btn_text != blank %}
                        <a
                          href="{{ block.settings.btn_link }}"
                          class="{% if block.settings.button_as_link %}hyperlink {% else %} button{% if settings.enable_button_shadow %} button-shadow{% endif %}{% endif %} slideshow-button {{ block.settings.button_size }}-btn"
                          title="{{ block.settings.btn_text }}"
                        >
                          {{- block.settings.btn_text -}}
                        </a>
                      {% endif %}
                      {% if block.settings.btn_link2 != blank and block.settings.btn_text2 != blank %}
                        <a
                          href="{{ block.settings.btn_link2 }}"
                          class="{% if block.settings.button_as_link2 %}hyperlink {% else %} button{% if settings.enable_button_shadow %} button-shadow{% endif %}{% endif %} slideshow-button {{ block.settings.button_size }}-btn"
                          title="{{ block.settings.btn_text }}"
                        >
                          {{- block.settings.btn_text2 -}}
                        </a>
                      {% endif %}
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
   

    {% if section.blocks.size > 1   %}
      {% if section.settings.slider_thumbnail == 'arrow-count' %}
        <div class="navigation-arrow-button-list no-js-hidden">
          {% render 'carousal-arrow-count',section %}
        </div>
      {% elsif section.settings.slider_thumbnail == 'only-arrow' %}
        {% render 'carousal-arrows', class: 'navigation-button-icon' %}
      {% endif %}
    {% endif %}

  </div>
  {% if thumb and section.blocks.size > 1 %}
  <div class="right-thumb slideshow-thumbnail">
    <div class="slideshow-inner slideshow-section slider slideshow-nav slideshow-nav-thumb-{{ section.id }} slideshow-count" data-slideshow='
    { 
     "resize": true,
     "contain": true,
    "draggable": false, 
    "groupCells": true,
    "cellAlign":"right",
    "asNavFor": ".slideshow-main-{{ section.id }}", 
    "prevNextButtons": false, 
    "pageDots": false
    }'
    >
      {% for block in section.blocks %}
        <div class="slideshow-thumbnail slideshow-thumbnail-item-count slideshow-thumbnail">
          <span class="item-count slideshow-item-count">{{ forloop.index }}</span>
        </div>
      {% endfor %}
    </div>
    <div class="slideshow-inner slideshow-section slideshow-nav slideshow-nav-images slideshow-nav-1-thumb-{{ section.id }} slider" data-slideshow='{ 
    "accessibility": true,
    "percentPosition": true,
     "resize": true,
     "contain": true,
    "draggable": false, 
    "groupCells": true,
    "cellAlign":"right",
    "asNavFor": ".slideshow-main-{{ section.id }}", 
    "prevNextButtons": false, 
    "pageDots": false
  
    }' data-nav-slideshow>
      {% for block in section.blocks %}
        {% capture slideImage %}
            {% liquid
              assign mobileImage = false
              if block.settings.image_mobile != blank
                assign mobileImage = true
                assign mobileClass = 'mobile-img d-block d-md-none ' 
                if forloop.first
                  assign height = block.settings.image_mobile.width | divided_by: block.settings.image_mobile.aspect_ratio | round
                  assign sizes = '100vw'
                  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                  if section.index == 1
                      assign fetch_priority = 'high'
                endif
                    echo block.settings.image_mobile | image_url: width: 3840 | image_tag: height: height,class: mobileClass, sizes: sizes, widths: widths, fetchpriority: fetch_priority
                else
                  render 'lazy-image', class: mobileClass,image: block.settings.image_mobile, imageSize: 575
                endif 
              endif
              assign desktopClass = '' 
              if mobileImage
                assign desktopClass = 'd-none d-md-block ' 
              endif
              if block.settings.image_desktop != blank
                if forloop.first
                  assign height = block.settings.image_desktop.width | divided_by: block.settings.image_desktop.aspect_ratio | round
                  assign sizes = '100vw'
                  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                  if section.index == 1
                      assign fetch_priority = 'high'
                  endif
                    echo block.settings.image_desktop | image_url: width: 3840 | image_tag: height: height,class: desktopClass, sizes: sizes, widths: widths, fetchpriority: fetch_priority
                else
                  render 'lazy-image', class: desktopClass, image: block.settings.image_desktop, imageSize: 1920
                endif
              elsif block.settings.image_desktop == blank and mobileImage
                assign placeholderClass = 'placeholder-svg d-none d-md-block ' 
                echo 'hero-apparel-2' | placeholder_svg_tag: placeholderClass 
              else
                assign placeholderClass = 'placeholder-svg ' 
                echo 'hero-apparel-1' | placeholder_svg_tag: placeholderClass
              endif
            %}
      {% endcapture %}
          <div class="slideshow-thumbnail slideshow-thumbnail-item slideshow-thumbnail">
            {% if block.settings.slider_video != blank %}
                <div
                  class="slideshow-thumbnail-inner"
                >
                
                {% if block.settings.slider_video.preview_image != blank %}
                  <div class="media"  style="--imageRatio:{{ 1 | divided_by : block.settings.image_desktop.aspect_ratio | times: 100 }}%">
                    {%  render 'lazy-image',  image: block.settings.slider_video.preview_image %}                
                  </div>
                {% endif %}
                </div>
            {%- else -%}
              <div
                class="slideshow-thumbnail-inner">

                {% if block.settings.image_desktop != blank %}
                  <div class="media"  style="--imageRatio:{{ 1 | divided_by : block.settings.image_desktop.aspect_ratio | times: 100 }}%">
                    {{ slideImage }}
                  </div>
                {% elsif block.settings.image_mobile != blank %}
                  <div class="media"   style="--imageRatio:{{ 1 | divided_by : block.settings.image_mobile.aspect_ratio | times: 100 }}%">
                    {{ slideImage }}
                  </div>
                  {% else %}
                  {{ slideImage }}
              {% endif %}
              </div>
            {% endif %}
          </div>
      {% endfor %}
        </div>
  </div>
  {% endif %}
</div>
