<style>
  #shopify-section-{{ section.id }}{
    --padding-top:{{ section.settings.top_space_desktop }}px;
    --padding-bottom:{{ section.settings.bottom_space_desktop }}px;
    }
        
    @media only screen and (max-width:767px){
      #shopify-section-{{ section.id }}{
          --padding-top:{{ section.settings.top_space_mobile }}px;
          --padding-bottom:{{ section.settings.bottom_space_mobile }}px;
      }
    }

    #shopify-section-{{ section.id }}{
      {% if section.settings.desktop_height == '100vh'%}
        --slideshow-height: {{ section.settings.desktop_height }};
      {% else %}
      --slideshow-height: {{ section.settings.desktop_height }};
      {% endif %}
      {% if section.blocks.first.settings.image_desktop != blank %}
        --imageRatio : {{- 1 | divided_by : section.blocks.first.settings.image_desktop.aspect_ratio | times: 100 -}}%;
        {% else %}
        --imageRatio : 50%;
      {% endif %}
      }
      {% if section.settings.slider_transition == 'fade' %}
      {% comment %} #shopify-section-{{ section.id }} .flickity-slider{ transform: none !important; } {% endcomment %}
      #shopify-section-{{ section.id }} .slideshow_item{
        left: 0 !important;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
        z-index: -1;
        left: 0 !important;
      opacity: 0;
      transition: "opacity 0.3s ease-in-out";
    }
    #shopify-section-{{ section.id }} .slideshow_item.is-selected{
      opacity: 1;
      z-index: 0
    }
  {% endif %}
    {% for block in section.blocks %}
      #slideshow_item_{{ block.id }}{
        --slideshow-subheading-color:{{ block.settings.subtext_color }};
        --slideshow-heading-color:{{block.settings.text_color }};
        --slideshow-text-color: {{ block.settings.description_color }};
        --overlay-bg:{{ block.settings.overlay_color }};
        --overlay-opacity:{{ block.settings.overlay_opacity | divided_by:100.0 }};
        --content-bg:{{ block.settings.content_overlay_color.red }},{{ block.settings.content_overlay_color.green }},{{ block.settings.content_overlay_color.blue }};
        --content-bg-alpha:{{ block.settings.content_overlay_opacity | divided_by:100.0 }};
        --linkColor: {{ block.settings.btn_text_color.red }},{{ block.settings.btn_text_color.green }},{{ block.settings.btn_text_color.blue }};
        --buttonBackground: {{ block.settings.btn_bg_color.red }},{{ block.settings.btn_bg_color.green }},{{ block.settings.btn_bg_color.blue }};
        {% unless block.settings.btn_shadow_color == 'rgba(0,0,0,0)' or block.settings.btn_shadow_color == blank %}
          --buttonShadow:{{ block.settings.btn_shadow_color }};
        {% endunless %}
        --buttonColor: {{ block.settings.btn_text_color.red }},{{ block.settings.btn_text_color.green }},{{ block.settings.btn_text_color.blue }};
        --buttonBorder: {{ block.settings.btn_border_color.red }},{{ block.settings.btn_border_color.green }},{{ block.settings.btn_border_color.blue }};
        --buttonBackgroundHover:{{ block.settings.btn_hover_color.red }},{{ block.settings.btn_hover_color.green }},{{ block.settings.btn_hover_color.blue }};
        --buttonColorHover:{{ block.settings.btn_hover_text_color.red }},{{ block.settings.btn_hover_text_color.green }},{{ block.settings.btn_hover_text_color.blue }};
        --buttonBorderHover:{{ block.settings.btn_hover_border_color.red }},{{ block.settings.btn_hover_border_color.green }},{{ block.settings.btn_hover_border_color.blue }};

      }
      
    {% endfor %}
      @media screen and (max-width:767px) {
        #shopify-section-{{ section.id }}{
          {% if section.settings.mobile_height == '100vh'%}
            --slideshow-height: {{ section.settings.mobile_height }};
          {% else %}
          --slideshow-height: {{ section.settings.mobile_height }};
          {% endif %}
          {% if section.blocks.first.settings.image_mobile != blank %}
            --imageRatio : {{- 1 | divided_by : section.blocks.first.settings.image_mobile.aspect_ratio | times: 100 -}}%;
            {% else %}
            --imageRatio : 50%;
          {% endif %}
        }
        {% for block in section.blocks %}
          #slideshow_item_{{ block.id }}{
            --slideshow-subheading-color:{{ block.settings.m_subtext_color }};
            --slideshow-heading-color:{{block.settings.m_text_color }};
            --slideshow-text-color: {{ block.settings.m_description_color }};
            --buttonBackground: {{ block.settings.m_btn_bg_color.red }},{{ block.settings.m_btn_bg_color.green }},{{ block.settings.m_btn_bg_color.blue }};
            {% unless block.settings.m_btn_shadow_color == 'rgba(0,0,0,0)' or block.settings.m_btn_shadow_color == blank %}
              --buttonShadow:{{ block.settings.m_btn_shadow_color }};
            {% endunless %}
            --linkColor:{{ block.settings.m_btn_text_color.red }},{{ block.settings.m_btn_text_color.green }},{{ block.settings.m_btn_text_color.blue }};
            --buttonColor: {{ block.settings.m_btn_text_color.red }},{{ block.settings.m_btn_text_color.green }},{{ block.settings.m_btn_text_color.blue }};
            --buttonBorder: {{ block.settings.m_btn_border_color.red }},{{ block.settings.m_btn_border_color.green }},{{ block.settings.m_btn_border_color.blue }};
          }
        {% endfor %}
      }
      {% if section.settings.section_visibility == 'large' %}
        @media (max-width: 767px) {
          #shopify-section-{{ section.id }}{
            display: none !important;
          }
        }
        {% elsif section.settings.section_visibility == 'small' %}
          @media (min-width: 768px) {
            #shopify-section-{{ section.id }}{
              display: none !important;
            }
          }
      {% endif %}
      

</style>
{% schema %}
{
  "name": "t:sections.slideshow.name",
  "tag": "section",
  "class": "slideshow-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:global.general_labels.general"
    },
    {
      "type": "select",
      "id": "section_visibility",
      "label": "t:global.section_visibility.label",
      "default": "always",
      "options": [
        {
          "label": "t:global.section_visibility.options.always.label",
          "value": "always"
        },
        {
          "label": "t:global.section_visibility.options.small.label",
          "value": "small"
        },
        {
          "label": "t:global.section_visibility.options.large.label",
          "value": "large"
        }
      ]
    },
    {
      "type": "select",
      "id": "section_style",
      "label": "t:sections.multiboxes.blocks.slideshow.settings.section_style.label",
      "default": "section_compactview",
      "options": [
        {
          "label": "t:sections.multiboxes.blocks.slideshow.settings.section_style.options.section_fullwidth.label",
          "value": "section_fullwidth"
        },
        {
          "label": "t:sections.multiboxes.blocks.slideshow.settings.section_style.options.section_compactview.label",
          "value": "section_compactview"
        },
        {
          "label": "t:sections.multiboxes.blocks.slideshow.settings.section_style.options.section_container.label",
          "value": "section_container"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:sections.slideshow.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 9,
      "step": 2,
      "unit": "s",
      "label": "t:sections.slideshow.settings.change_slides_speed.label",
      "default": 5
    },
    {
