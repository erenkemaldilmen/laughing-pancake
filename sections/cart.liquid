                %}
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-3">
            <div class="cart-checkout-wrapper">
              <div class="cart-checkout-header">
                <h6 class="cart-checkout-head h6">{{ 'sections.cart.order_summay' | t }}</h6>
              </div>
              <div class="cart-checkout-inner">
                {% render 'cart-shipping-bar' %}
                {% if settings.enable_cart_note %}
                  <div class="instruction-note" data-cart-note-wrapper>
                    <label class="instruction-note-text"><svg viewBox="0 0 16.6 16.4">
                      <g >
                        <path fill="currentColor" d="M10.71,16.4h-2.71c-2.66,0-4,0-5.12-.57-1-.5-1.79-1.29-2.3-2.27-.58-1.11-.58-2.43-.58-5.06v-.6c0-2.63,0-3.95.58-5.06.51-.98,1.3-1.77,2.3-2.27,1.12-.56,2.46-.56,5.12-.56h.61c2.66,0,4,0,5.12.56,1,.5,1.79,1.29,2.3,2.27.58,1.11.58,2.43.58,5.06v2.68c0,.27,0,.41,0,.54-.07,1.18-.54,2.32-1.34,3.19-.09.1-.18.19-.38.39-.19.19-.29.29-.39.38-.89.79-2.03,1.25-3.22,1.32-.13,0-.27,0-.54,0ZM8,1.4c-2.44,0-3.66,0-4.49.42-.73.37-1.31.94-1.69,1.66-.42.81-.42,2.02-.42,4.42v.6c0,2.4,0,3.61.42,4.42.37.72.95,1.29,1.69,1.66.83.42,2.05.42,4.49.42h2.64v-1.4c0-.92,0-1.43.25-1.9.21-.41.55-.75.97-.96.47-.24.99-.24,1.92-.24h1.43v-2.6c0-2.4,0-3.61-.42-4.42-.37-.72-.96-1.3-1.69-1.66-.83-.42-2.05-.42-4.49-.42h-.61ZM13.77,11.9c-.69,0-1.11,0-1.29.09-.15.08-.28.2-.36.35-.09.17-.09.6-.09,1.26v1.25c.56-.16,1.08-.44,1.51-.83.08-.08.17-.16.33-.32.17-.17.25-.25.33-.33.39-.42.67-.93.83-1.47h-1.27ZM6.02,11.15h-1.52c-.39,0-.7-.31-.7-.7s.31-.7.7-.7h1.52c.39,0,.7.31.7.7s-.31.7-.7.7ZM9.06,8.15h-4.56c-.39,0-.7-.31-.7-.7s.31-.7.7-.7h4.56c.39,0,.7.31.7.7s-.31.7-.7.7ZM10.58,5.15h-6.08c-.39,0-.7-.31-.7-.7s.31-.7.7-.7h6.08c.39,0,.7.31.7.7s-.31.7-.7.7Z"/>
                      </g>
                    </svg><strong>Add your Order Note </strong></label>
                    <textarea
                      class="form-control{% if settings.enable_input_shadow %} small-shadow-enabled{% endif %}"
                      rows="3"
                      name="note"
                      placeholder="{{'sections.cart.note_heading' | t }}"
                      data-cart-note
                    >{{- cart.note -}}</textarea>
                  </div>
                {% endif %}
                {% render 'cart-gift-wrap', giftWrapProductStatus: giftWrapProductStatus %}
                <ul class="unstylish-ul cart-total-box" data-cart-prices>
                  {%- if cart.cart_level_discount_applications.size > 0 -%}
                    {%- for discount in cart.cart_level_discount_applications -%}
                      <li class="cart-summary-item discount-price">
                        <span class="heading-font">{{ 'sections.cart.discount' | t }}({{ discount.title }})</span>
                        <span>-{{ discount.total_allocated_amount | money }}</span>
                      </li>
                    {%- endfor -%}
                  {% endif %}
                  <li class="cart-summary-item cart-summary-total">
                    <span class="h6 heading-font"> {{ 'sections.cart.headings.total' | t -}}</span>
                    <strong class="h6 heading-font" data-cart-final-price>{{ cart.total_price | money }}</strong>
                  </li>
                </ul>
                <p class="cart-policy-text text-small">{{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}</p>
                <div class="cart-checkout-container">
                  <noscript>
                    <button
                      type="submit"
                      id="cartUpdate"
                      form="mainCartForm"
                      class="button large-btn btn-block{% if settings.enable_button_shadow %} button-shadow{% endif %}"
                    >
                      {{ 'sections.cart.update' | t }}
                    </button>
                  </noscript>
  
                  {% assign isTermsAndCnd = false %}
                  {% if settings.enable_terms_and_conditions and settings.terms_and_conditions_text %}
                    {% assign isTermsAndCnd = true %}
                      <div class="terms-conditions-block">
                        <div class="checkbox-box">
                          <input type="checkbox" class="checkbox-input" name="terms-conditions" value="" id="cart-terms-conditions" data-cart-terms>
                          <span class="checkbox-tick"></span>
                          <label class="filter-hand-icon" for="cart-terms-conditions" title="terms-conditions">{{ settings.terms_and_conditions_text }}</label>
                        </div>
                      </div>
                    {% endif %}
  
  
                  <button type="submit" name="checkout" form="mainCartForm" class="button large-btn btn-block{% if settings.enable_button_shadow %} button-shadow{% endif %}">
                    {{ 'sections.cart.checkout' | t }}
                  </button>
                  {%- if additional_checkout_buttons -%}
                    <div class="cart-dynamic-checkout-buttons">
                      {{ content_for_additional_checkout_buttons }}
                    </div>
                  {%- endif -%}
                </div>
                <div class="cart-payment-icon">
                  <ul class="unstylish-list list-payment">
                    {%- for type in shop.enabled_payment_types -%}
                      <li class="list-payment-item">
                        {{ type | payment_type_svg_tag: class: 'icon' }}
                      </li>
                    {%- endfor -%}
                  </ul>
                </div>
              </div>
              
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
<style>
  #shopify-section-{{ section.id }}{
    --padding-top: {{ section.settings.top_space_desktop}}px;
    --padding-bottom: {{ section.settings.bottom_space_desktop}}px;
  }
  @media only screen and (max-width:767px) {
    #shopify-section-{{ section.id }}{
        --padding-top: {{ section.settings.top_space_mobile }}px;
        --padding-bottom: {{ section.settings.bottom_space_mobile }}px;
    }
  }
</style>
{% schema %}
{
  "name": "t:sections.cart.name",
  "class": "section cart-section",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "shipping_rates_calculator",
      "label": "t:sections.cart.settings.shipping_rates_calculator.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:global.general_labels.colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "primary",
      "label": "t:global.color_scheme.label"
    },
    {
      "type": "checkbox",
      "id": "enable_gradient",
      "label": "t:global.general_labels.gradient",
      "default": false
    },
    {
      "type": "header",
      "content": "t:global.section_padding.label"
    },
    {
      "type": "range",
      "id": "top_space_desktop",
      "label": "t:global.section_padding.options.top_space_desktop.label",
      "default": 70,
      "min": 0,
      "max": 150,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_desktop",
      "label": "t:global.section_padding.options.bottom_space_desktop.label",
      "default": 70,
      "min": 0,
      "max": 150,
      "step": 5
    },
    {
      "type": "range",
      "id": "top_space_mobile",
      "label": "t:global.section_padding.options.top_space_mobile.label",
      "default": 40,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_mobile",
      "label": "t:global.section_padding.options.bottom_space_mobile.label",
      "default": 40,
      "min": 0,
      "max": 100,
      "step": 5
    }
  ]
}

{% endschema %}
