  <div class="{{settings.layout_style }}">
    <div
      class="cart-wrapper" 
      data-section="{{ section.id }}"
      data-cart-wrapper
      data-item-count="{{ cart.item_count }}"
    >
      {% if cart.item_count == 0 %}
        <div class="empty-card-box" data-cart-empty>
