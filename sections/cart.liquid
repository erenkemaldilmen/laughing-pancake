              <path d="M24.1319 6.66357H24.1311L24.1232 6.91099L24.1319 6.66357Z" fill="currentColor"></path>
              </g>
            </svg>
          </span>
          <div class="empty-card-content">
            <h2 class="empty-card-heading">{{ 'sections.cart.empty' | t }}</h2>
            <p class="empty-card-desc">{{ 'sections.cart.empty_description' | t }}</p>
            <a
              href="{{ routes.all_products_collection_url }}"
              class="unstyled-link button icon-btn right-icon{% if settings.enable_button_shadow %} button-shadow{% endif %}"
              aria-label="{{'general.continue_shopping' | t }}"
            >
              {{- 'general.continue_shopping' | t }}
            </a>
          </div>
        </div>
      {% else %}
        <div class="cart-heading-wrapper">
          <h2 class="cart-title">{{ 'sections.cart.title' | t }}</h2>
          <a href="{{ routes.all_products_collection_url }}" class="button small-btn">
            {{- 'general.continue_shopping' | t -}}
          </a>
        </div>
        <div class="row no-gutters">
          <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-9">
            <div class="cart-contents">
              <div class="cart-form-wrapper" data-cart-form>
                <div class="cart-form-outer">
                  <form action="{{ routes.cart_url }}" method="post" id="mainCartForm" class="form-cart">
                    <div class="cart-details-header">
                      <div class="cart-header-item cart-header-name">
                        <strong>{{ 'sections.cart.headings.product' | t }}</strong>
                      </div>
                      <div class="cart-header-item cart-header-price">
                        <strong>{{ 'sections.cart.headings.price' | t }}</strong>
                      </div>
                      <div class="cart-header-item cart-header-quantity">
                        <strong>{{ 'sections.cart.headings.quantity' | t }}</strong>
                      </div>
                      <div class="cart-header-item cart-header-total">
                        <strong>{{ 'sections.cart.headings.total' | t }}</strong>
                      </div>
                      <div class="cart-header-item cart-header-remove text-right">
                        <strong>{{ 'sections.cart.headings.remove' | t }}</strong>
                      </div>
                    </div>
                    {% assign giftWrapProductStatus = false %}
                    {%- for item in cart.items -%}
                      {% liquid
                        assign isGiftWrapProduct = false
                        if item.product_id == settings.gift_wrap_product.id and settings.enable_gift_wrap
                          assign giftWrapProductStatus = true
                          assign isGiftWrapProduct = true
                        endif
                      %}
                      <div class="cart-details-item" data-cart-item>
                        <div class="cart-item-media-wrapper">
                         
                            {% comment %}theme-check-disable ImgWidthAndHeight{% endcomment %}
                            <{% if item.image %}a href="{{ item.url }}" {% else %}div{% endif %} class="cart-item-media{% if settings.image_border  and item.image %} product-border-enabled {% endif %}">
                              {% if item.image %}
                              <div
                                class="media"
                                style="--imageRatio:{{ 1 | divided_by : item.image.aspect_ratio | times: 100 }}%"
                              >
                                <img
                                  src="{{ item.image | image_url: width: 300 }}"
                                  alt="{{ item.image.alt | escape }}"
                                >
                              </div>
                             {% endif %}
                            </{% if item.image %}a{% else %}div{% endif %}>
                            {% comment %}theme-check-enable ImgWidthAndHeight{% endcomment %}
                   
                          <div class="cart-item-details">
                            <a href="{{ item.url }}" class="product-title text-medium">
                              
                              {% if settings.product_card_title_style == 'bold' %}
                                  <strong>
                              {% endif %}
                                  {{ item.product.title | escape }}
                              {% if settings.product_card_title_style == 'bold' %}
                                  </strong>
                              {% endif %}
                            </a>
                            {% if item.product.has_only_default_variant == false
                              or item.selling_plan_allocation != null
                              or item.properties
                              or item.line_level_discount_allocations.size > 0
                            %}
                              <ul class="item-varient-title">
                                {% unless item.product.has_only_default_variant %}
                                {% for option in item.options_with_values %}
                                  <li>
                                    <span>{{ option.name }}</span> - <span>{{ option.value }}</span>
                                  </li>
                                {%- endfor -%}
                              {% endunless %}
                                {%- if item.selling_plan_allocation != null -%}
                                  <li>
                                    <span>{{ 'sections.cart.plan' | t }}</span> -
                                    <span>{{ item.selling_plan_allocation.selling_plan.name }}</span>
                                  </li>
                                {%- endif -%}
                                {%- for property in item.properties -%}
                                  {%- assign property_first_char = property.first | slice: 0 -%}
                                  {%- if property.last != blank and property_first_char != '_' -%}
                                    <li>
                                      <span>{{ property.first }} :</span> -
                                      <span>
                                        {%- if property.last contains '/uploads/' -%}
                                          <a
                                            class="unstyled-link line-item-property"
                                            href="{{ property.last }}"
                                            target="_blank"
                                            aria-label="{{ property.first }}"
                                          >
                                            {{ property.last | split: '/' | last }}
                                          </a>
                                        {%- else -%}
                                          {{ property.last }}
                                        {%- endif -%}
                                      </span>
                                    </li>
                                  {%- endif -%}
                                {%- endfor -%}

                                {%- if item.line_level_discount_allocations.size > 0 -%}
                                  <li>
                                    {%- for discount in item.line_level_discount_allocations -%}
                                      <span class="cart__discount">
                                        <svg width="13" height="13" viewBox="0 0 13 13" fill="none">
                                          <path fill-rule="evenodd" clip-rule="evenodd" d="M5.92896 0L12.1162 0.884384L13 7.07195L7.25466 12.817C7.13745 12.9342 6.9785 13 6.81276 13C6.64703 13 6.48808 12.9342 6.37086 12.817L0.183002 6.62944C0.065826 6.51224 0 6.35329 0 6.18756C0 6.02183 0.065826 5.86289 0.183002 5.74568L5.92896 0ZM7.69657 5.3038C7.81267 5.41986 7.9505 5.51191 8.10218 5.57471C8.25386 5.6375 8.41642 5.66981 8.58059 5.66978C8.74475 5.66975 8.90731 5.63739 9.05897 5.57454C9.21062 5.51169 9.34842 5.41959 9.46448 5.30349C9.58054 5.18739 9.6726 5.04957 9.7354 4.8979C9.7982 4.74623 9.8305 4.58367 9.83047 4.41951C9.83044 4.25535 9.79808 4.09281 9.73523 3.94116C9.67238 3.78951 9.58027 3.65172 9.46417 3.53566C9.34807 3.4196 9.21024 3.32755 9.05856 3.26476C8.90688 3.20196 8.74431 3.16966 8.58015 3.16969C8.2486 3.16975 7.93065 3.3015 7.69625 3.53597C7.46185 3.77044 7.3302 4.08842 7.33026 4.41995C7.33032 4.75149 7.46208 5.06942 7.69657 5.3038Z" fill="currentColor"></path>
                                        </svg>
                                        <span>{{ discount.discount_application.title }}</span
                                        ><span>(-{{ discount.amount | money }})</span>
                                      </span>
                                    {% endfor %}
                                  </li>
                                {% endif %}
                              </ul>
                            {%- endif -%}
                            <div class="cart-item-prices product-price mobile-cart-item-prices">
                              {%- if item.original_price != item.final_price -%}
                                <span class="actual-price">{{ item.final_price | money }}</span>
                                <span class="compare-price">{{ item.original_price | money }}</span>
                              {%- else -%}
                                <span class="actual-price">{{ item.original_price | money }}</span>
                              {%- endif -%}
                            </div>
                            <div class="cart-item-quantity-wrapper mobile-cart-item-quantity" data-quantity-wrapper>
                              <div class="product-quantity-inner small-quantity">
                                {% unless isGiftWrapProduct %}
                                  <span class="variant-title d-none">{{ 'products.product.quantity.label' | t }}</span>
                                  <button
                                    type="button"
                                    class="quantity-button no-js-hidden ajax-cart-update"
                                    data-page="{{ section.id }}"
                                    title="{{ 'products.product.quantity.decrease' | t }}"
                                    data-quantity-decrement
                                  >
                                    <span class="hidden">{{ 'products.product.quantity.decrease' | t }}</span>
                                    <svg x="0px" y="0px" width="10px" height="10px" viewBox="0 0 14 14">
                                      <rect x="6" transform="matrix(6.123234e-17 -1 1 6.123234e-17 0 14)" width="2.1" height="14"></rect>
                                    </svg>
                                  </button>
                                  <input
                                    type="number"
                                    class="quantity-input ajax-cart-update"
                                    name="updates[]"
                                    min="1"
                                    step="1"
                                    value="{{ item.quantity }}"
                                    data-previous-value="{{ item.quantity }}"
                                    data-page="{{ section.id }}"
                                    data-quantity-input
                                    data-line="{{ forloop.index }}"
                                  >
                                  <button
                                    type="button"
                                    class="quantity-button no-js-hidden ajax-cart-update"
                                    data-page="{{ section.id }}"
                                    title="{{ 'products.product.quantity.increase' | t }}"
                                    data-quantity-increment
                                  >
                                    <span class="hidden">{{ 'products.product.quantity.increase' | t }}</span>
                                    <svg x="0px" y="0px" width="10px" height="10px" viewBox="0 0 14 14">
                                      <polygon points="14,6 8,6 8,0 6,0 6,6 0,6 0,8 6,8 6,14 8,14 8,8 14,8 "></polygon>
                                    </svg>
                                  </button>
                                {% endunless %}
                              </div>
                            </div>
                            <div
                              id="cartItemError-{{ forloop.index }}"
                              class="cart-item-error error"
                              style="display: none;"
                              role="status"
                            >
                              <p class="form-message__title text-small">
                                <span data-error-text></span>
                              </p>
                            </div>
                          </div>
                        </div>
                        <div class="cart-item-prices product-price desktop-cart-item-prices">
                          {%- if item.original_price != item.final_price -%}
                            <span class="actual-price">{{ item.final_price | money }}</span>
                            <span class="compare-price">{{ item.original_price | money }}</span>
                          {%- else -%}
                            <span class="actual-price">{{ item.original_price | money }}</span>
                          {%- endif -%}
                        </div>
                        <div class="cart-item-quantity-wrapper desktop-cart-item-quantity" data-quantity-wrapper>
                          <div class="product-quantity-inner small-quantity">
                            {% unless isGiftWrapProduct %}
                              <span class="variant-title d-none">{{ 'products.product.quantity.label' | t }}</span>
                              <button
                                type="button"
                                class="quantity-button no-js-hidden ajax-cart-update"
                                data-page="{{ section.id }}"
                                title="{{ 'products.product.quantity.decrease' | t }}"
                                data-quantity-decrement
                              >
                                <span class="hidden">{{ 'products.product.quantity.decrease' | t }}</span>
                                <svg x="0px" y="0px" width="10px" height="10px" viewBox="0 0 14 14">
                                  <rect x="6" transform="matrix(6.123234e-17 -1 1 6.123234e-17 0 14)" width="2.1" height="14"></rect>
                                </svg>
                              </button>
                              <input
                                type="number"
                                class="quantity-input ajax-cart-update"
                                name="updates[]"
                                min="1"
                                step="1"
                                value="{{ item.quantity }}"
                                data-previous-value="{{ item.quantity }}"
                                data-page="{{ section.id }}"
                                data-quantity-input
                                data-line="{{ forloop.index }}"
                              >
                              <button
                                type="button"
                                class="quantity-button no-js-hidden ajax-cart-update"
                                data-page="{{ section.id }}"
                                title="{{ 'products.product.quantity.increase' | t }}"
                                data-quantity-increment
                              >
                                <span class="hidden">{{ 'products.product.quantity.increase' | t }}</span>
                                <svg x="0px" y="0px" width="10px" height="10px" viewBox="0 0 14 14">
                                  <polygon points="14,6 8,6 8,0 6,0 6,6 0,6 0,8 6,8 6,14 8,14 8,8 14,8 "></polygon>
                                </svg>
                              </button>
                            {% endunless %}
                          </div>
                          <div class="cart-item-remove mobile-item-remove">
                            <div class="cart-remove">
                              <a
                                href="{{ item.url_to_remove }}"
                                data-line="{{ forloop.index }}"
                                data-page="{{ section.id }}"
                                class="cart-remove-link"
                                data-item-remove
                              >
                                <svg
                                  width="16"
                                  height="17"
                                  viewBox="0 0 16 17"
                                >
