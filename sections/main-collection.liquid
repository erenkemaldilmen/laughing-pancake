<style>
  {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        .promotion_{{ block.id }}{
          --banner-overlay-bg: {{ block.settings.background_color.red }},{{ block.settings.background_color.green }},{{ block.settings.background_color.blue }};
          --banner-overlay-opacity: {{ block.settings.background_opacity }};
        }
      {% endfor %}
    {% endif %}
  #shopify-section-{{ section.id }}{
    --padding-top: {{ section.settings.top_space_desktop}}px;
    --padding-bottom: {{ section.settings.bottom_space_desktop}}px;
    --media-height: {{ section.settings.banner_height_desktop }};
    --banner-overlay-bg: {{ section.settings.background_opacity_color }};
    --banner-overlay-opacity: {{ section.settings.background_opacity }};
    {% unless section.settings.text_color == 'rgba(0,0,0,0)' or section.settings.text_color == blank %}
    --banner-overlay-text: {{ section.settings.text_color }}; 
    {% else %}
