{%- endcapture -%}
<div class="scheme-{{ Colorscheme}} section-padding{% if section.settings.enable_gradient %} gradiant{% endif %}">
  <div class="collection-main layout-{{ section.settings.page_layout }}">
  {% liquid
    assign bannerStatus = false
    assign descriptionStatus = false
    assign headingStatus = false
    if section.settings.show_description and collection.description != blank and section.settings.description_position == 'on_overlay'
      assign descriptionStatus = true
      assign bannerStatus = true
    endif
    if section.settings.overlay_text
      assign headingStatus = true
      assign bannerStatus = true
    endif
    if section.settings.collection_image and collectionImage != ''
      assign bannerStatus = true
    endif
  %}
  {%- if bannerStatus -%}
    <div class="page-banner{% if headingStatus or descriptionStatus %} overlay-text{% endif %}">
      {% if section.settings.collection_image and collectionImage != '' %}
        <div class="page-banner-image">
          <div
            class="media_wrapper"
            style="--imgRatio: {% if collectionImage != blank %}{{ 1 | divided_by : collectionImage.aspect_ratio | times: 100 }}{% else %}100{% endif %}%;"
          >
            {%- render 'lazy-image', image: collectionImage -%}
          </div>
        </div>
      {% endif %}
      {% render 'collection-content', overlayContent: true, heading: headingStatus, description: descriptionStatus,container:true %}
    </div>
  {% endif %}
  <div class="collection-wrapper{% if sidebarEnabled == false %} sidebar_filters_disabled{% endif %}">
    {% if sidebarEnabled %}
      {% render 'collection-filters', results: results,sort_by: sort_by, section.blocks, section: section %}
    {% endif %}
    {% if section.blocks.size > 0 %}
      <div class="collection-contents">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'select_collection' %}
              {% if block.settings.collectionlist != blank %}
              {% assign collections = block.settings.collectionlist %}
              <div
                class="sub-categories-main"
              >
                <div
                  class="collection_shown no-js-slider"
                  {% if collections.count > 2 %}
                  data-slideshow='
                    {
                    "contain": true,
                    "cellAlign": "left",
                    "imagesLoaded": true,
                    "lazyLoad": true,
                    "wrapAround": false,
                    "pageDots": false,
                    "draggable": true,
                    "groupCells": true,
                    "prevNextButtons": false,
                    "cellSelector":".sub-categories-item"
                    }
                  '
                  {% endif %}
                >
                  {% if collections.count > 2 %}
                    {% render 'carousal-arrows', class: 'custom-navigation-button-icon' %}
                  {% endif %}
                  {%- for collection in collections -%}
                    <div class="sub-categories-item">
                      <div class="sub-categories-card">
                        <div class="sub-categories-img">
                          <div class="media" style="--imageRatio:100%">
                            {%- if collection.image -%}
                              {%- assign collection_image = collection.image -%}
                            {%- elsif collection.products.first and collection.products.first.images != empty -%}
                              {%- assign collection_image = collection.products.first.featured_image -%}
                            {%- else -%}
                              {%- assign collection_image = blank -%}
                            {%- endif -%}
                            {% if collection_image != blank %}
                              {% render 'lazy-image', image: collection_image %}
                            {% else %}
                              {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                            {% endif %}
                          </div>
                        </div>
                        <div class="sub-categories-detail">
                          {% if collection != blank %}
                            <p class="sub-categories-title product-title">{{ collection.title }}</p>
                          {% endif %}
                          {% if collection != blank %}
                            <a href="{{ collection.url }}" class="hyperlink text-small" aria-label="{{ collection.title }}">
                              {{'sections.collection_template.shop_now' | t }}
                            </a>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                    
                  {% endfor %}
                </div>
              </div>
            {% endif %}
            {% when 'product-grid' %}
              {% liquid
                assign mobileColumns = block.settings.columns_mobile
                assign desktopColumns = block.settings.columns_desktop
              %}
              <div id="CollectionProductsParent" class="collection_products {{sort_by}}" data-id="{{ section.id }}">
                <div class="product-card-wrapper">
                  {% liquid
                    assign descriptionStatus = false
                    assign headingStatus = false
                    if section.settings.show_description and collection.description != blank and section.settings.description_position == 'above_products'
                      assign descriptionStatus = true
                    endif
                    if section.settings.overlay_text == false
                      assign headingStatus = true
                    endif
                    render 'collection-content', overlayContent: false, heading: headingStatus, description: descriptionStatus
                  %}
                  <div class="{{ settings.layout_style }}">
                    {% if collection.products_count > 0 %}
                      <div class="filter-sortby-wrapper">
                        <span class="Product-result">
                          <strong class="total_products"> 
                            {% if collection.products_count > 1 %}
                            {{ 'sections.collection_template.product_count_simple.other' | t: count: collection.products_count }}
                            {% else %}
                              {{ 'sections.collection_template.product_count_simple.one' | t: count: collection.products_count }}
                            {%endif  %}
                          </strong>
                        </span>
                      </div>
                    {% endif %}
                    {%- if activeFilters != blank -%}
                      <ul class="applied__filters list-unstyled" data-products-applied-filter>

                        {{ activeFilters }}
                        <li class="applied__filter-item">
                          <a
                            class="unstyled-link applied__filter-link clear_filter sr-applied-filter-remove"
                            href="{{ collection.url }}"
                            sr-applied-filter-cross-all
                          >
                            <span>
                              <svg
                                width="10"
                                height="10"
                                viewBox="0 0 10 10"
                                fill="none"
                              >
                                <path d="M8.99998 0L9.99998 0.999969L0.999998 9.99969L0 8.99972L8.99998 0Z" fill="currentColor"></path>
                                <path d="M2.39302e-05 1.00028L1.00002 0.000307701L10 9.00003L9 10L2.39302e-05 1.00028Z" fill="currentColor"></path>
                              </svg>
                            </span>
                            {{"sections.collection_template.clear" |t }}

                            
                          </a>
                        </li>
                      </ul>
                    {%- endif -%}
                    {% paginate collection.products by section.settings.products_per_page %}
                      {% if collection.products_count > 0 %}
                        <div class="row" data-collection-products>
                          {%- liquid
                            capture placeholderIndex
                              cycle cycleGroup: '1', '2', '3', '4'
                            endcapture
                          -%}
                          {%- assign product_counter = 0 -%}
                          {% for product in collection.products %}
                            
                            {% capture productGrid %}
                            <div class="{% if mobileColumns == '2' %}col-6 {% else %}col-12{% endif %} {% if desktopColumns == '3' %}col-md-4 col-lg-4 col-xl-4{% else %}col-md-4 col-lg-4 col-xl-3{% endif %}" >
                              {% render 'product-card-grid',
                                cardProduct: product,
                                comparePrice: true,
                                unitPrice: true,
                                showCount: true,
                                cycleIndex: placeholderIndex,
                                compareTrue: true,
                                quickViewtrue: true,
                                gridImageSize: section.settings.grid_image_size
                                
                              %}
                            </div>
                            {% endcapture %}
                            {%- liquid
                              assign product_counter = product_counter | plus: 1
                              assign productForLoopIndex = forloop
                              assign promotionBlocks = section.blocks | where: 'type', 'promotion'
                            %}
                            {%- for block in promotionBlocks -%}
                              {% assign contentWidth = block.settings.content_width %}

                              {% capture promotionContent %}
                              <div
                                class="promotion_{{ block.id }} {% if mobileColumns == '2' %}col-6 {% else %}col-12{% endif %} {% if desktopColumns == '3'%}{% if contentWidth == '2' %}col-md-8 col-lg-8{% else %}col-md-4 col-lg-4{% endif %}{% else%}{% if contentWidth == '2' %}col-md-4 col-lg-6{% else %}col-md-4 col-lg-3{% endif %}{% endif %} {% if settings.image_border %} border-enabled {% endif %}" data-block-id="{{ block.id }}"
                                style="--opacityColor:{{block.settings.background_color.red}},{{block.settings.background_color.green}},{{block.settings.background_color.blue}};--backgroundOpacity:{{block.settings.background_opacity}}"
                                {{ block.shopify_attributes }}
                              >
                                <{% if block.settings.link != blank %}a href="{{ block.settings.link }}"{% else %}div{% endif %}
                                  class="promotion-card"
                                >
                                  <div class="promotion-card-image">
                                    {% liquid
                                      assign ratio = 100
                                      if block.settings.custom_image != blank
                                        assign ratio = 1 | divided_by: block.settings.custom_image.aspect_ratio | times: 100
                                      endif
                                    %}
                                    <div
                                      class="media"
                                      style="--imageRatio:{{ ratio }}%"
                                    >
                                      {% liquid
                                        if block.settings.custom_image != blank
                                          render 'lazy-image', image: block.settings.custom_image
                                        else
                                          echo 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg'
                                        endif
                                      %}
                                    </div>
                                  </div>
                                  {% if block.settings.heading != blank or block.settings.description != blank %}
                                    <div class="promotion-card-content {{ block.settings.heading_alignment }}">
                                      {% if block.settings.heading != blank %}
                                      <{{ block.settings.seo_heading }} class="{{ block.settings.heading_size }} promotion-card-heading">
                                        {{ block.settings.heading }}
                                      </{{ block.settings.seo_heading }}>
                                    {% endif %}
                                      {% if block.settings.description != blank %}
                                      <p class="promotion-card-desc rte">{{ block.settings.description }}</p>
                                    {% endif %}
                                    </div>
                                  {% endif %}
                                </{% if block.settings.link != blank %}a{% else %}div{% endif %}>
                              </div>
                              {% endcapture %}
                              {% liquid
                                if product_counter == block.settings.custom_content_position
                                  echo promotionContent
                                  echo productGrid
                                elsif block.settings.custom_content_position > section.settings.products_per_page and productForLoopIndex.last
                                  echo productGrid
                                  echo promotionContent
                                else
                                  echo productGrid
                                endif
                              %}
                            {% else %}
                              {{ productGrid }}
                            {%- endfor -%}
                          {% endfor %}
                          {% if section.settings.load_type %}
                            {% if paginate.next %}
                              {% if section.settings.load_type == 'infinite' %}
                                <div class="infinte-scroll" data-scroll>
                                  <a href="{{ paginate.next.url }}" aria-label="loading"></a>
                                  <div class="load hidden">
                                    <svg
                                      width="40"
                                      height="40"
                                      style="shape-rendering: auto; animation-play-state: running; animation-delay: 0s; background: none;"
                                      viewBox="0 0 100 100"
                                      preserveAspectRatio="xMidYMid"
                                    >
                                      <circle cx="50" cy="50" fill="none" stroke="#d9e2ed" stroke-width="6" r="35"
                                         stroke-dasharray="164.93361431346415 56.97787143782138"
                                         style="animation-play-state: running; animation-delay: 0s;"
                                         transform="rotate(115.597 50 50)">
                                         <animateTransform attributeName="transform" type="rotate" calcMode="linear"
                                            values="0 50 50;360 50 50" keyTimes="0;1" dur="1s" begin="0s"
                                            repeatCount="indefinite">
                                         </animateTransform>
                                      </circle>
                                    </svg>
                                  </div>
                                </div>
                              {% elsif section.settings.load_type == 'load_more' %}
                                <div class="infinte-scroll laod-more" data-load-more>
                                  <a
                                    class="collection-load-more button xsmall-btn{% if settings.enable_button_shadow %} button-shadow{% endif %}"
                                    href="{{ paginate.next.url }}"
                                    aria-label="load-more"
                                    data-products-load
                                  >
                                    {{"sections.collection_template.load_more" | t }}
                                  </a>
                                  <div class="load hidden">
                                    <svg
                                      width="40"
                                      height="40"
                                      style="shape-rendering: auto; animation-play-state: running; animation-delay: 0s; background: none;"
                                      viewBox="0 0 100 100"
                                      preserveAspectRatio="xMidYMid"
                                    >
                                      <circle cx="50" cy="50" fill="none" stroke="#d9e2ed" stroke-width="6" r="35"
                                         stroke-dasharray="164.93361431346415 56.97787143782138"
                                         style="animation-play-state: running; animation-delay: 0s;"
                                         transform="rotate(115.597 50 50)">
                                         <animateTransform attributeName="transform" type="rotate" calcMode="linear"
                                            values="0 50 50;360 50 50" keyTimes="0;1" dur="1s" begin="0s"
                                            repeatCount="indefinite">
                                         </animateTransform>
                                      </circle>
                                    </svg>
                                  </div>
                                </div>
                              {% endif %}
                            {% endif %}
                          {% endif %}
                          
                          {% if paginate.pages > 1 and section.settings.load_type == 'page_number' %}
                            {% render 'pagination', paginate: paginate, anchor: '' %}
                          {% endif %}
                        </div>
                      {% else %}
                        <div class="empty-card-box">
                          <span class="empty-card-icon">
                            <svg width="39" height="36" viewBox="0 0 39 36" fill="none">
                              <g clip-path="url(#clip0_1_7509)">
