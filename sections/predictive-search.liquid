{%- if predictive_search.performed -%}
  {%- if predictive_search.resources.queries.size > 0
    or predictive_search.resources.products.size > 0
    or predictive_search.resources.articles.size > 0
    or predictive_search.resources.pages.size > 0
    or predictive_search.resources.collections.size > 0
  -%}
    {% assign searchQueries = false %}
    {%- if predictive_search.resources.queries.size > 0 -%}
      {% assign searchQueries = true %}
      <div class="predictive-search-suggestion">
        <span class="predictive-search--label heading-font">{{"templates.search.suggestions" | t }}</span>
        <div class="predictive-suggestion-list">
          {%- for query in predictive_search.resources.queries -%}
            <a id="predictive-search-option-query-{{ forloop.index }}" href="{{ query.url }}" title="{{ query.text }}">
              {{ query.text -}}
              <span class="suggestion-icon">
                <svg width="11" height="11" viewBox="0 0 11 11" fill="none">
                  <path d="M0.965622 0.666214L0.965657 2.10146L7.91963 2.10149L1.19464 8.82648L2.20955 9.84138L8.93454 3.11639L8.93454 10.0703L10.3698 10.0704L10.3698 0.666179L0.965622 0.666214Z" fill="currentColor"/>
                </svg>
              </span>
            </a>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
    {%- if predictive_search.resources.products.size > 0
      or predictive_search.resources.articles.size > 0
      or predictive_search.resources.pages.size > 0
      or predictive_search.resources.collections.size > 0
    -%}
      {% liquid
        assign showTabs = false
        assign availableResources = 0
        if predictive_search.resources.products.size > 0
          assign availableResources = availableResources | plus: 1
        endif
        if predictive_search.resources.articles.size > 0
          assign availableResources = availableResources | plus: 1
        endif
        if predictive_search.resources.pages.size > 0
          assign availableResources = availableResources | plus: 1
        endif
        if predictive_search.resources.collections.size > 0
          assign availableResources = availableResources | plus: 1
        endif
        if searchQueries and availableResources > 2
          assign showTabs = true
        elsif searchQueries == false and availableResources > 1
          assign showTabs = true
        endif
      %}
      <div class="predictive-search-tabs">
        {% if showTabs %}
          {% assign displayAsCurrentHeading = false %}
          <ul class="tabs unstylish-list tab-main">
            {%- if predictive_search.resources.products.size > 0 -%}
              <li
                class="tab-item tab-button{% if displayAsCurrentHeading == false %} active{% endif %}"
                onclick="showTab(event, 'predictiveSearch-resources-products')"
              >
                <span class="tab-link cursor-pointer">
                {{"templates.search.product" | t }}
              </span>
              </li>
              {% assign displayAsCurrentHeading = true %}
            {%- endif -%}
            {%- if predictive_search.resources.collections.size > 0 -%}
              <li
                class="tab-item tab-button{% if displayAsCurrentHeading == false %} active{% endif %}"
                onclick="showTab(event, 'predictiveSearch-resources-collections')"
              >
                <span class="tab-link cursor-pointer">
                {{"templates.search.collections" | t }}
              </span>
              </li>
              {% assign displayAsCurrentHeading = true %}
            {%- endif -%}
            {%- if predictive_search.resources.articles.size > 0 and settings.show_article -%}
              <li
                class="tab-item tab-button{% if displayAsCurrentHeading == false %} active{% endif %}"
                onclick="showTab(event, 'predictiveSearch-resources-articles')"
              >
                <span class="tab-link cursor-pointer">
                 {{"templates.search.article" | t }}
                </span>
              </li>
              {% assign displayAsCurrentHeading = true %}
            {%- endif -%}
            {%- if predictive_search.resources.pages.size > 0 and settings.show_pages -%}
              <li
                class="tab-item tab-button{% if displayAsCurrentHeading == false %} active{% endif %}"
                onclick="showTab(event, 'predictiveSearch-resources-pages')"
              >
                <span class="tab-link cursor-pointer">
                {{"templates.search.page" | t }}
                </span>
              </li>
              {% assign displayAsCurrentHeading = true %}
            {%- endif -%}
          </ul>
        {% endif %}
        <div class="product-tab-content">
        {% assign displayAsCurrent = false %}

        {%- if predictive_search.resources.products.size > 0 -%}
          <div
            id="predictiveSearch-resources-products"
            class="tab-content active"
            style="display:{% if displayAsCurrent == false %} block{% else %}none{% endif %};"
          >
            <div class="predictive-search-products searchbar__result-product">
              <span class="predictive-search--label heading-font">{{"templates.search.product" | t }}</span>
              <div class="predictive-search-tranding-products">
                <ul class="tranding-product-list">
                  {% for product in predictive_search.resources.products limit: 12 %}
                    {% render 'product-search-grid',
                      product: product,
                      gridImageSize: settings.results_product_grid_image_size,
                      searchDrawerStyle: settings.search_drawer_style
                    %}
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
          {% assign displayAsCurrent = true %}
        {%- endif -%}
        {%- if predictive_search.resources.collections.size > 0 -%}
          <div
            id="predictiveSearch-resources-collections"
            class="tab-content"
            style="display:{% if displayAsCurrent == false %} block{% else %}none{% endif %};"
          >
            <div class="predictive-search-collection">
              <span class="predictive-search--label heading-font">{{"templates.search.collections" | t }}</span>
              <ul class="search-collection-list">
                {%- for collection in predictive_search.resources.collections limit: 5 -%}
                  {%- liquid
                    assign gridImageSize = settings.results_collection_grid_image_size
                    if gridImageSize == 'landscape'
                      assign collectionImageRatio = 'var(--img-landscape)'
                    elsif gridImageSize == 'square'
                      assign collectionImageRatio = 'var(--img-square)'
                    elsif gridImageSize == 'portrait'
                      assign collectionImageRatio = 'var(--img-portrait)'
                    else
                      if collection.featured_image != blank
                        assign collectionImageRatio = 1 | divided_by: collection.featured_image.aspect_ratio | times: 100 | append: '%'
                      else
                        assign collectionImageRatio = 100 | append: '%'
                      endif
                    endif
                  -%}
                  <li class="search-collection-item">
                    <div class="search-collection-card">
                      <div class="search-collection-img">
                        <div class="media" Style="--imageRatio:{{ collectionImageRatio }}">
                          {% liquid
                            assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1
                            if collection.featured_image != blank
                              render 'lazy-image', image: collection.featured_image, imageSize: 210
                            else
                              echo 'collection-apparel-' | append: placeholder_image_index | placeholder_svg_tag: 'placeholder-svg'
                            endif
                          %}
                        </div>
                      </div>
                      <div class="search-collection-info">
                        <a href="{{ collection.url }}" class="search-collection-title">{{ collection.title }}</a>
                      </div>
                    </div>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          </div>
          {% assign displayAsCurrent = true %}
        {%- endif -%}
        {%- if predictive_search.resources.articles.size > 0 and settings.show_article -%}
          <div
            id="predictiveSearch-resources-articles"
            class="tab-content"
            style="display: {% if displayAsCurrent == false %} block{% else %}none{% endif %};"
          >
            <div class="predictive-search-article">
              <span class="predictive-search--label heading-font">{{"templates.search.article" | t }}</span>
              <ul class="search-article-list">
                {%- for article in predictive_search.resources.articles limit: 5 -%}
                  {%- liquid
                    assign gridImageSize = settings.results_article_grid_image_size
                    if gridImageSize == 'landscape'
                      assign articleImageRatio = 'var(--img-landscape)'
                    elsif gridImageSize == 'square'
                      assign articleImageRatio = 'var(--img-square)'
                    elsif gridImageSize == 'portrait'
                      assign articleImageRatio = 'var(--img-portrait)'
                    else
                      if article.image != blank
                        assign articleImageRatio = 1 | divided_by: article.image.aspect_ratio | times: 100 | append: '%'
                      else
                        assign articleImageRatio = 100 | append: '%'
                      endif
                    endif
                  -%}
                  <li class="search-article-item">
                    <div class="search-article-card">
                      <div class="search-article-img">
                        <div class="media" Style="--imageRatio:{{ articleImageRatio }}">
                          {% liquid
                            assign placeholder_image_index = forloop.index0 | modulo: 3 | plus: 1
                            if article.image != blank
                              render 'lazy-image', image: article.image, imageSize: 210
                            else
                              echo 'blog-apparel-' | append: placeholder_image_index | placeholder_svg_tag: 'placeholder-svg'
                            endif
                          %}
                        </div>
                      </div>
                      <div class="search-article-info">
                        <a href="{{ article.url }}" class="search-article-title">{{ article.title }}</a>
                        {%- if article.excerpt_or_content != blank -%}
                          <p>
                            {{ article.excerpt_or_content | strip_html | truncatewords: 20 }}
                          </p>
                        {% endif %}
                      </div>
                    </div>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          </div>
          {% assign displayAsCurrent = true %}
        {%- endif -%}
        {%- if predictive_search.resources.pages.size > 0 and settings.show_pages -%}
          <div
            id="predictiveSearch-resources-pages"
            class="tab-content"
            style="display: {% if displayAsCurrent == false %} block{% else %}none{% endif %};"
          >
            <div class="predictive-search-pages">
              <span class="predictive-search--label heading-font">{{"templates.search.page" | t }}</span>
              <ul class="search-pages-list">
                {%- for page in predictive_search.resources.pages limit: 5 -%}
                  <li class="search-pages-item">
                    <div class="search-pages-card">
                      <div class="search-pages-img">
                        <div class="media">
                          {% render 'icons', icon: 'page' %}
                        </div>
                      </div>
                      <div class="search-pages-info">
                        <a href="{{ page.url }}" class="search-pages-title">{{ page.title }}</a>
                      </div>
                    </div>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </div>
          {% assign displayAsCurrent = true %}
        {%- endif -%}
      </div>
    </div>
      <div class="search_all_link">
        {% liquid
          assign searchType = '&type=product,collection'
          if settings.show_article or settings.show_pages
            if settings.show_article
              assign searchType = searchType | append: ',article'
            endif
            if settings.show_pages
              assign searchType = searchType | append: ',page'
            endif
          endif
        %}
        <a
          href="{{ routes.search_url }}?q={{ predictive_search.terms }}&options[prefix]=last{{- searchType -}}"
          class="hyperlink"
          >{{"templates.search.all_result" | t }}</a
        >
      </div>
    {%- endif -%}
  {% else %}
    <div class="empty-card-box">
      <span class="empty-card-icon">
        <svg width="39" height="36" viewBox="0 0 39 36" fill="none">
          <g clip-path="url(#clip0_1_7509)">
